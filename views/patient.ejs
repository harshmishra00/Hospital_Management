                <a class="border-2 border-green-200 w-1/2 bg-green-50 p-3 flex gap-2 rounded-lg overflow-hidden"
                    href="/appointments">
                    <div class="flex flex-col justify-center">
                        <h1 class="text-2xl font-bold">Book an Appointment</h1>
                        <p class="text-md">With country's leading experts</p>
                    </div>
                    <div class="flex items-center justify-center">
                        <i class="fa-regular fa-calendar-days text-4xl text-green-500"></i>
                    </div>
                </a>
                <a class="border-2 border-blue-200 w-1/2 bg-blue-50 p-3 flex gap-5 rounded-lg overflow-hidden"
                    href="/appointments">
                    <div class="flex flex-col justify-center">
                        <h1 class="text-2xl font-bold">Hospitals</h1>
                        <p class="text-md">Health needs under one roof</p>
                    </div>
                    <div class="flex items-center justify-center">
                        <i class="fa-solid fa-bed text-4xl text-blue-500"></i>
                    </div>
                </a>
            </div>
            <div class="h-1/2 flex gap-2">
                <a class="border-2 border-purple-200 w-1/2 bg-purple-50 p-3 flex gap-10 rounded-lg overflow-hidden"
                    href="/appointments">
                    <div class="flex flex-col justify-center">
                        <h1 class="text-2xl font-bold">Specialities</h1>
                        <p class="text-md">Our expertise in healthcare</p>
                    </div>
                    <div class="flex items-center justify-center">
                        <i class="fa-solid fa-hand-holding-heart text-4xl text-purple-500"></i>
                    </div>
                </a>
                <a class="border-2 border-orange-200 w-1/2 bg-orange-50 p-3 flex gap-10 rounded-lg overflow-hidden"
                    href="/appointments">
                    <div class="flex flex-col justify-center">
                        <h1 class="text-2xl font-bold">Doctors</h1>
                        <p class="text-md">Top exprets for your health</p>
                    </div>
                    <div class="flex items-center justify-center">
                        <i class="fa-solid fa-user-doctor text-4xl text-orange-500"></i>
                    </div>
                </a>
            </div>
        </div>
        <div class="w-[600px] h-[300px] flex flex-col gap-2 p-2 pl-10">
            <h1 class="text-3xl ">We can help you book</h1>
            <div class="flex gap-2 w-full h-2/3 p-3">
                <div
                    class="border border-green-300/50 w-1/2 h-full flex flex-col items-center justify-center rounded-lg shadow-sm">
                    <img src="/icons/doc.png" alt="Doctor" class="w-20 h-20" />
                    <h1 class="font-semibold tracking-wider text-xl">Health Checkups</h1>
                </div>
                <div
                    class="border border-green-300/50 shadow-sm rounded-lg w-1/2 h-full flex flex-col items-center justify-center">
                    <img src="/icons/image.png" alt="Doctor" class="w-20 h-20" />
                    <h1 class="font-semibold tracking-wider text-xl">Tests & Services</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="w-full mt-16 h-96  pl-36 pr-36 flex gap-5 ">
        <div class=" w-2/5  h-full flex flex-col justify-center items-center gap-5">
            <h1 class="text-4xl font-semibold tracking-wider">Breakthrough Cases</h1>
            <button class=" p-2 pl-4 pr-4 border-2 border-orange-400 rounded-lg ">View All</button>
            <p class="text-gray-500">Swipe right for more news...<i class="fa-solid fa-arrow-right"></i></p>
        </div>
        <div class="relative w-3/5 h-96 rounded-lg overflow-x-auto overflow-y-hidden
            flex snap-x snap-mandatory scroll-smooth shadow-[0_25px_50px_-12px_rgba(0,0,0,0.35)]"">
            <% healthArticles.forEach(article=> { %>
                <div class=" min-w-full h-full flex snap-center">

            <div class="w-1/2 h-full p-6">
                <h1 style="font-family: 'News Cycle'" class="text-3xl tracking-wide font-semibold">
                    <%= article.title %>
                </h1>

                <p class="mt-5 text-gray-500">
                    <%= article.content ? article.content.slice(0, 200) : article.description %>...
                        <a href="<%= article.url %>" target="_blank" class="text-blue-500 font-cursive">
                            Read More
                        </a>
                </p>
            </div>

            <div class="w-1/2 h-full overflow-hidden">
                <% if (article.urlToImage) { %>
                    <img src="<%= article.urlToImage %>" class="w-full h-full object-cover" alt="">
                    <% } %>
            </div>

        </div>
        <% }) %>

    </div>


    </div>


