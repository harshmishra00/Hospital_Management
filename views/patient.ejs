<style>
    .allura-regular {
        font-family: "Allura", cursive;
        font-weight: 400;
        font-style: normal;
    }

    .news-cycle-regular {
        font-family: "News Cycle", sans-serif;
        font-weight: 400;
        font-style: normal;
    }

    .news-cycle-bold {
        font-family: "News Cycle", sans-serif;
        font-weight: 700;
        font-style: normal;
    }
