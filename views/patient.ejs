<body>
    <div class="flex justify-center gap-16 p-2 border border-gray-300 tracking-wider">
        <p>Find a doctor</p>
        <p>Investors</p>
        <p>About us</p>
        <p>Careers</p>
        <p>CSR</p>
        <p>Contact us</p>
    </div>

    <header class="w-full h-28 bg-green-700/80 flex items-center justify-between">
        <div>
            <h1 class="text-white text-2xl font-semibold font-serif ml-10">Welcome, <span class="text-yellow-400">
                    <%= patientName %>
                </span></h1>
        </div>
        <div class="flex gap-7 text-white font-semibold ">
            <a href="/patient" class="hover:underline">Home</a>
            <a href="/appointments" class="hover:underline">Appointments</a>
            <a href="/history" class="hover:underline">Medical history</a>
            <a href="/contact" class="hover:underline">Contact</a>
        </div>
        <div class="mr-10">
            <a href="/profile" class="bg-yellow-400 p-2 rounded-lg hover:bg-yellow-500 font-semibold mr-5">Profile</a>
            <a href="/logout" class="text-white text-xl hover:text-gray-200">➜]</a>
        </div>

    </header>

    <div
        class="flex justify-center gap-16 p-2 border border-gray-300 font-semibold bg-gray-50 shadow-lg items-center tracking-wider">
        <p><i class="fa-solid fa-phone"></i> Request a Callback</p>
        <div class="p-2 pl-4 pr-4 bg-orange-100 rounded-3xl hover:bg-orange-300">
            <p><i class="fa-solid fa-calendar-days"></i> Book Appointment</p>
        </div>
        <p><i class="fa-solid fa-stethoscope"></i> Get Health Checkup</p>
    </div>

    <div class="relative w-full h-[500px] overflow-hidden">
        <div class="absolute inset-0 bg-cover bg-center blur-sm"
            style="background-image: url('https://plus.unsplash.com/premium_vector-1682270091935-677cd4ff2f4e?q=80&w=3520&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');">
        </div>
        <div class="absolute inset-0 bg-white/40"></div>
        <div class="relative z-10 h-full flex flex-col px-10 text-black items-center">
            <div class="w-[750px] p-10 flex flex-col items-center bg-white/70 capitalize mt-10">
                <h1 class="text-5xl font-semibold tracking-widest">Healthcare for Good</h1>
                <h1 class="text-5xl font-semibold tracking-widest">Today. Tomorrow. Always</h1>
            </div>
            <div class="flex w-[1000px] border rounded-lg overflow-hidden mt-16">
                <input type="search" placeholder="Search for Doctors, Specialists and Medicines" class="flex-1 p-6" />
                <button class="px-4 bg-white border-r-lg">
                    <i class="fa-solid fa-magnifying-glass text-2xl"></i>
                </button>
            </div>
        </div>

    </div>

    <div class="w-full h-[350px] flex items-center justify-center">
        <div class="w-[650px] h-[300px] flex flex-col p-4 gap-4">
