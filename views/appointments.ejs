<body>
    <style>
        .prata-regular {
            font-family: "Prata", serif;
            font-weight: 400;
        }

        .vast-shadow-regular {
            font-family: "Vast Shadow", serif;
            font-weight: 400;
            font-style: normal;
        }


        .unkempt-regular {
            font-family: "Unkempt", cursive;
            font-weight: 400;
            font-style: normal;
        }

        .unkempt-bold {
            font-family: "Unkempt", cursive;
            font-weight: 700;
            font-style: normal;
        }

        .kranky-regular {
            font-family: "Kranky", serif;
            font-weight: 400;
            font-style: normal;
        }

        .cedarville-cursive-regular {
            font-family: "Cedarville Cursive", cursive;
            font-weight: 400;
            font-style: normal;
        }

        .licorice-regular {
            font-family: "Licorice", cursive;
            font-weight: 400;
            font-style: normal;
        }
    </style>

    <header class="w-full h-28 bg-green-900 flex items-center justify-between">
        <div>
            <h1 class="text-white text-2xl font-semibold font-serif ml-10">Appointemnts</h1>
        </div>
        <div class="flex gap-7 text-white font-semibold ">
            <a href="/patient" class="hover:underline">Home</a>
            <a href="/appointments" class="hover:underline">Appointments</a>
            <a href="/history" class="hover:underline">Medical history</a>
            <a href="/contact" class="hover:underline">Contact</a>
        </div>
        <div class="mr-10">
            <a href="/profile" class="bg-yellow-400 p-2 rounded-lg hover:bg-yellow-500 font-semibold mr-5">Profile</a>
            <a href="/logout" class="text-white text-xl hover:text-gray-200">âžœ]</a>
        </div>

    </header>

    <div class="flex flex-wrap gap-12 p-16 bg-gradient-to-br from-slate-100 to-slate-200 min-h-screen">


        <div class="w-[420px] p-6 bg-white shadow-xl rounded-3xl h-[550px]">
            <h1 class="font-semibold text-2xl border-b pb-2 mb-4 text-slate-800" style="font-family: 'Unkempt'">
                Book a New Appointment
            </h1>

            <form action="/book-appointment" method="post" class="flex flex-col space-y-5 text-slate-700">

                <div class="flex flex-col">
                    <label class="font-semibold mb-1">Date</label>
                    <input type="date" name="date"
                        class="p-2 rounded-xl border focus:outline-none focus:ring-2 focus:ring-indigo-400">
                </div>

                <div class="flex flex-col">
                    <label class="font-semibold mb-1">Doctor</label>
                    <select name="doctor"
                        class="p-2 rounded-xl border focus:outline-none focus:ring-2 focus:ring-indigo-400">
                        <option>Dr. Raghvendra</option>
                        <option>Dr. Nasik Chusta</option>
                        <option>Dr. Adarsh Dwivedi</option>
                    </select>
                </div>

                <div class="flex flex-col">
                    <label class="font-semibold mb-1">Reason</label>
                    <textarea name="reason"
                        class="p-2 rounded-xl border resize-none h-20 focus:outline-none focus:ring-2 focus:ring-indigo-400"></textarea>
                </div>

                <div class="flex flex-col">
                    <label class="font-semibold mb-1">Time</label>
                    <input type="time" name="time"
                        class="p-2 rounded-xl border focus:outline-none focus:ring-2 focus:ring-indigo-400">
                </div>

                <button type="submit"
                    class="mt-3 bg-indigo-500 hover:bg-indigo-600 text-white font-semibold text-lg p-2 rounded-xl transition">
                    Book Appointment
                </button>
            </form>
        </div>

        <!-- APPOINTMENTS LIST -->
        <div class="flex-1">
            <h1 class="text-2xl font-semibold mb-4 text-slate-800 border-b pb-2">
                Booked Appointments
            </h1>

            <% if (patient.appointments.length> 0) { %>
                <div class="grid gap-4">
                    <% patient.appointments.forEach((item)=> { %>
                        <div class="bg-white rounded-3xl p-4 shadow-lg hover:shadow-xl transition">

                            <div class="flex items-center gap-2">
                                <p class="text-sm text-slate-500" style="font-family: 'Cedarville Cursive'">
                                    with
                                </p>
                                <h1 class="text-3xl font-bold text-indigo-600" style="font-family: 'Licorice'">
                                    <%= item.doctor %>
                                </h1>
                            </div>

                            <div class="flex justify-between mt-4 text-slate-600">
                                <div>
                                    <p class="text-sm font-semibold">Date</p>
                                    <p>
                                        <%= item.date %>
                                    </p>
                                </div>
                                <div>
                                    <p class="text-sm font-semibold">Time</p>
                                    <p>
                                        <%= item.time %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } else { %>
                    <p class="text-slate-500 mt-4">No appointments booked yet.</p>
                    <% } %>
        </div>
    </div>


</body>

</html>